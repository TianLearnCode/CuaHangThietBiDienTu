@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    ViewBag.Title = "AdminPage";
}


@{
    ViewBag.Title = "Trang Quản Trị";
}
<style>
    .icon-bg {
        background-color: #e0e0e0;
    }
</style>
<div class="container mt-4">
    <h2 class="mb-4 text-center">Thống kê tổng quan</h2>

    <div class="row g-4">


        <div class="col-md-6">

            <div class="rounded-5 border border-gray-200 bg-white p-4">
                <div class="d-flex align-items-center justify-content-center rounded-4 icon-bg" style="width: 48px; height: 48px;">
                    <i class="fa-regular fa-user"></i>
                </div>

                <div class="flex items-end justify-between mt-5">
                    <div>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Khách hàng</span>
                        <h4 class="mt-2 fw-bold text-primary">@ViewBag.TongKhachHang</h4>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-6">


            <div class="rounded-5 border border-gray-200 bg-white p-4">
                <div class="d-flex align-items-center justify-content-center rounded-4 icon-bg" style="width: 48px; height: 48px;">
                    <i class="fa-solid fa-coins"></i>
                </div>

                <div class="flex items-end justify-between mt-5">
                    <div>
                        <span class="text-sm text-gray-500 dark:text-gray-400">Doanh thu</span>
                        <h4 class="mt-2 fw-bold text-success">
                            @String.Format("{0:N0} VNĐ", ViewBag.TongDoanhThu)

                        </h4>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
