@model IEnumerable<CuaHangThietBiDienTu.Models.DonHang>

@{
    ViewBag.Title = "Lịch Sử Đơn Hàng";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-history me-2"></i>LỊCH SỬ ĐƠN HÀNG</h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-4"></i>
            <h4 class="text-muted">Chưa có đơn hàng nào</h4>
            <a href="@Url.Action("SanPham", "SanPhams")" class="btn btn-primary mt-3">
                <i class="fas fa-shopping-bag me-2"></i>MUA SẮM NGAY
            </a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.MaDonHang</td>
                                    <td>@order.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold text-danger">@order.TongTien?.ToString("N0") ₫</td>
                                    <td>
                                        <span class="badge
                                            @(order.TinhTrangGiaoHang == "Đã giao" ? "bg-success" :
                                              order.TinhTrangGiaoHang == "Đang giao" ? "bg-primary" :
                                              order.TinhTrangGiaoHang == "Đã hủy" ? "bg-danger" : "bg-warning")">
                                            @order.TinhTrangGiaoHang
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("OrderDetails", "Account", new { id = order.MaDonHang })"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>