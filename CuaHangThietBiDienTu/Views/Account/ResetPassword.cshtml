@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewBag.Title = "Đặt lại mật khẩu";
}

<h2>Đặt lại mật khẩu</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group mt-3">
        <label>Mật khẩu mới:</label>
        @Html.Password("newPassword", null, new { @class = "form-control", placeholder = "Nhập mật khẩu mới" })
    </div>

    <div class="form-group mt-3">
        <label>Xác nhận mật khẩu:</label>
        @Html.Password("confirmPassword", null, new { @class = "form-control", placeholder = "Nhập lại mật khẩu mới" })
    </div>

    <button type="submit" class="btn btn-success mt-3">Đặt lại mật khẩu</button>


}
@if (ViewBag.ErrorMessage != null)
{
    <p class="text-danger mt-2">@ViewBag.ErrorMessage</p>
}

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success mt-3">@ViewBag.SuccessMessage</div>
}