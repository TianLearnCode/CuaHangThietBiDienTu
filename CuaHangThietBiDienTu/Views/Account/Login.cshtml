@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <label>Email:</label>
        @Html.TextBox("email", null, new { @class = "form-control" })
    </div>

    <div>
        <label>Mật khẩu:</label>
        @Html.Password("password", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Đăng nhập</button>
    <p>
        <a href="@Url.Action("ForgotPassword", "Account")" class="text-decoration-none">Quên mật khẩu?</a>
    </p>

    <p style="color:red">@ViewBag.ErrorMessage1</p>

}
<div class="mt-3">
    <p>
        Chưa có tài khoản?
        <a href="@Url.Action("Register", "Account")" class="text-decoration-none">Đăng ký ngay</a>
    </p>

</div>