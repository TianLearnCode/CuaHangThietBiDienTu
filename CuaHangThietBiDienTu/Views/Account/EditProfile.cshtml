@model CuaHangThietBiDienTu.Models.NguoiDung
@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/ProfileLayout.cshtml";  
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0"><i class="bi bi-person-lines-fill"></i> Cập nhật thông tin cá nhân</h4>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ tên</label>
                            @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control", placeholder = "Nhập họ tên..." })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ngày sinh</label>
                            @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Giới tính</label>
                            @Html.DropDownListFor(model => model.GioiTinh, new List<SelectListItem> {
                                new SelectListItem { Text = "Nam", Value = "Nam" },
                                new SelectListItem { Text = "Nữ", Value = "Nữ" },
                                new SelectListItem { Text = "Khác", Value = "Khác" }
                            }, "Chọn giới tính", new { @class = "form-select" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Điện thoại</label>
                            @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control", placeholder = "Nhập số điện thoại..." })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Địa chỉ</label>
                            @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", placeholder = "Nhập địa chỉ..." })
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success px-4 me-2">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    }
                </div>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success m-3 text-center">
                        <i class="bi bi-check-circle-fill"></i> @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>
