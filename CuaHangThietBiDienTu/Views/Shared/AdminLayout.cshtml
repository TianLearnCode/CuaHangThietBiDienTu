<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    /* Hiệu ứng hover cho menu chính */
    .menu-item {
        transition: all 0.2s ease-in-out;
    }

        .menu-item:hover {
            background-color: #0d6efd; /* Màu xanh Bootstrap */
            color: white !important;
        }

            .menu-item:hover i {
                color: white;
            }

    /* Hiệu ứng hover cho menu con */
    .submenu-item {
        color: #333;
        text-decoration: none;
        transition: all 0.2s ease-in-out;
    }

        .submenu-item:hover {
            background-color: #e9ecef;
            color: #0d6efd;
            text-decoration: none;
        }

    /* Mục đang active */
    .active-menu {
        background-color: #0d6efd !important;
        color: white !important;
    }

        .active-menu i {
            color: white;
        }

    body {
        background-color: rgb(248, 249, 250);
    }
</style>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("CuaHangDienTu.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Trang chủ", "TrangChu", "SanPhams", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Sản phẩm", "SanPham", "SanPhams", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Liên hệ", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session["UserRole"] != null && (Session["UserRole"].ToString().Trim().ToLower() == "quản lý"))
                    {
                        <li>@Html.ActionLink("Admin Page", "AdminPage", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
        <div class="text-end p-2 text-white">
            @if (Session["Email"] != null)
            {
                <a href="@Url.Action("Profile", "Account")"
                   class="nav-link text-decoration-none"
                   style="white-space: nowrap;">
                    Xin chào, @Session["UserName"]!
                </a>
                
            }
            else
            {
                <a href="@Url.Action("Login", "Account")"
                   class="nav-link text-decoration-none">
                    Đăng nhập
                </a>
            }
        </div>
    </nav>



    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-sm-3">
                <div class="side-bar bg-white p-3" style="width:100%; min-height:100vh;">
                    <h3 class="sidebar-title text-primary border-bottom pb-2 mb-3">
                        <i class="fa fa-bars me-2"></i> Menu
                    </h3>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <a href="@Url.Action("AdminPage", "Admin")" class="menu-item d-block px-2 py-2 rounded text-dark text-decoration-none">
                                <i class="fa fa-chart-bar me-2"></i> Tổng quan
                            </a>
                        </li>

                        <li class="mb-2">
                            <a class="menu-item d-flex align-items-center justify-content-between text-dark text-decoration-none px-2 py-2 rounded"
                               data-bs-toggle="collapse"
                               href="#collapseQuanLy"
                               role="button"
                               aria-expanded="false"
                               aria-controls="collapseQuanLy">
                                <span><i class="fa fa-cogs me-2"></i> Quản lý</span>
                                <i class="fa fa-chevron-down small"></i>
                            </a>

                            <!-- Menu con -->
                            <ul class="collapse list-unstyled ps-4 mt-2" id="collapseQuanLy">
                                <li class="mb-1">
                                    <a href="@Url.Action("DSNhanVien", "User")" class="submenu-item d-block px-2 py-1 rounded">
                                        <i class="fa fa-users me-2"></i> Nhân viên
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("DSKhachHang", "User")" class="submenu-item d-block px-2 py-1 rounded">
                                        <i class="fa fa-user me-2"></i> Khách hàng
                                    </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("DSSanPham", "SanPhams")" class="submenu-item d-block px-2 py-1 rounded">
                                        <i class="fa-solid fa-box-archive"></i> Sản phẩm
                                    </a>
                                </li>
                            </ul>

                        </li>
                        <li class="mb-2">
                            <a href="@Url.Action("Profile", "Account")" class="menu-item d-block px-2 py-2 rounded text-dark text-decoration-none">
                                <i class="fa-regular fa-circle-user"></i> Tài khoản
                            </a>
                        </li>

                        <!-- Mục khác -->

                    </ul>
                </div>
            </div>

            <div class="col-sm-9">
                @RenderBody()

            </div>
        </div>



        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
