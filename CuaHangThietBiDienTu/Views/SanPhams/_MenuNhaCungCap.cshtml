@model IEnumerable<CuaHangThietBiDienTu.Models.NhaCungCap>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-info text-white">
        <h6 class="mb-0"><i class="fas fa-truck me-2"></i>NHÀ CUNG CẤP</h6>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            <a href="@Url.Action("SanPham")"
               class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"].ToString() == "SanPham" && !Request.QueryString.HasKeys() ? "active" : "")">
                <i class="fas fa-building me-2"></i>Tất cả nhà cung cấp
            </a>
            @foreach (var item in Model)
            {
                <a href="@Url.Action("TimTheoNCC", new { mancc = item.MaNCC })"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(ViewContext.RouteData.Values["action"].ToString() == "TimTheoNCC" && Convert.ToInt32(ViewContext.RouteData.Values["mancc"]) == item.MaNCC ? "active" : "")">
                    <span><i class="fas fa-warehouse me-2"></i>@item.TenNCC</span>
                    <span class="badge bg-secondary rounded-pill">
                        @item.SanPham.Count
                    </span>
                </a>
            }
        </div>
    </div>
</div>
