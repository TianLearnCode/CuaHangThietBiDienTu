@model IEnumerable<CuaHangThietBiDienTu.Models.LoaiSanPham>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-success text-white">
        <h6 class="mb-0"><i class="fas fa-list me-2"></i>DANH MỤC SẢN PHẨM</h6>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            <a href="@Url.Action("SanPham")"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(ViewContext.RouteData.Values["action"].ToString() == "SanPham" && !Request.QueryString.HasKeys() ? "active" : "")">
                <span><i class="fas fa-th me-2"></i>Tất cả sản phẩm</span>
                <span class="badge bg-primary rounded-pill">
                    @ViewBag.TongSoSanPham
                </span>
            </a>
            @foreach (var item in Model)
            {
                <a href="@Url.Action("TimTheoLoaiSP", new { maLoai = item.MaLoai })"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(ViewContext.RouteData.Values["action"].ToString() == "TimTheoLoaiSP" && Convert.ToInt32(ViewContext.RouteData.Values["maLoai"]) == item.MaLoai ? "active" : "")">
                    <span><i class="fas fa-mobile-alt me-2"></i>@item.TenLoai</span>
                    <span class="badge bg-secondary rounded-pill">
                        @item.SanPham.Count
                    </span>
                </a>
            }
        </div>
    </div>
</div>