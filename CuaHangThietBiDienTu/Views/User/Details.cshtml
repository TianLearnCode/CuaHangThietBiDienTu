@model CuaHangThietBiDienTu.Models.NguoiDung

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}


<div class="">
    @if (Model.MaVaiTro == 2)
    {
        <h4>Thông tin cá nhân nhân viên</h4>

    }@if (Model.MaVaiTro == 3)
    {
        <h4>Thông tin cá nhân khách hàng </h4>

    }
    <hr />
    <div class="row p-3 rounded-5 border border-gray-200 bg-white">
        <div class="col-lg-3">
            <img src="~/Content/Images/UserAVT/@Model.AVT" class="w-100 rounded-5"/>
        </div>
        <div class="col-lg-9 p-3 rounded-5 border border-gray-200">
            <div class="row">
                <div class="co"></div>
            </div>
        </div>
    </div>
</div>
<p class="mt-5">
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaNguoiDung }, new { @class = "btn btn-primary" }) |
    @if (Model.MaVaiTro == 2)
    {
        @Html.ActionLink("Quay lại", "DSNhanVien", "User", null, new { @class = "btn btn-secondary" })
    }
    else if (Model.MaVaiTro == 3)
    {
        @Html.ActionLink("Quay lại", "DSKhachHang", "User", null, new { @class = "btn btn-secondary" })
    }

</p>
